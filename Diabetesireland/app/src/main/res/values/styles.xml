<resources>
    <style name="Divider">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#3F1451</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3F1451</item>
        <item name="colorPrimaryDark">#3F1451</item>
        <item name="colorAccent">#3F1451</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/themeColor</item>
    </style>

</resources>
