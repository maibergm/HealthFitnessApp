<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maxim.diabetesireland.WeeklyUpdateFragment"
    tools:showIn="@layout/activity_weekly_update">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maxim.diabetesireland.WeeklyUpdateFragment"
    tools:showIn="@layout/activity_weekly_update">

    <com.jjoe64.graphview.GraphView
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:id="@+id/graph"
        android:layout_below="@+id/stepButton"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Pedometer"
        android:id="@+id/stepButton"
        android:background="#ff3F1451"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Food Intake"
        android:id="@+id/carbButton"
        android:background="#ffdbdbdb"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/stepButton"
        android:layout_alignEnd="@+id/graph" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps This Week:"
        android:id="@+id/textView"
        android:layout_below="@+id/graph"
        android:layout_alignParentStart="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goals Reched:"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Steps Per Day:"
        android:id="@+id/textView4"
        android:textSize="25sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
</ScrollView>