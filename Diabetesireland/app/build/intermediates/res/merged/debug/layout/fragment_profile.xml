<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileFragment"
    tools:showIn="@layout/activity_profile">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:textSize="30sp"
        android:id="@+id/age_text"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Gender:"
        android:id="@+id/gender_text"
        android:layout_below="@+id/age_text"
        android:layout_alignLeft="@+id/updated_height"
        android:layout_alignStart="@+id/updated_height"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Weight:"
        android:id="@+id/updated_weight"
        android:layout_alignTop="@+id/divider3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Height:"
        android:id="@+id/updated_height"
        android:layout_below="@+id/updated_weight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="BMI:"
        android:id="@+id/bmi_text"
        android:layout_below="@+id/gender_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Update"
        android:id="@+id/weight_update"
        android:layout_alignBottom="@+id/updated_weight"
        android:layout_alignRight="@+id/divider3"
        android:layout_alignEnd="@+id/divider3" />

    <View style="@style/Divider"
        android:id="@+id/divider1"
        android:layout_below="@+id/age_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <View style="@style/Divider"
        android:id="@+id/divider2"
        android:layout_below="@+id/gender_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <View style="@style/Divider"
        android:id="@+id/divider3"
        android:layout_alignBottom="@+id/bmi_text"
        android:layout_alignRight="@+id/height_update"
        android:layout_alignEnd="@+id/height_update" />

    <View style="@style/Divider"
        android:id="@+id/divider4"
        android:layout_below="@+id/weight_update"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/divider3"
        android:layout_alignEnd="@+id/divider3" />
    <View style="@style/Divider"
        android:id="@+id/divider5"
        android:layout_below="@+id/updated_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:src="@drawable/background"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Personal Information"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="center_vertical"
        android:id="@+id/view"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Update"
        android:id="@+id/height_update"
        android:layout_above="@+id/divider5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>