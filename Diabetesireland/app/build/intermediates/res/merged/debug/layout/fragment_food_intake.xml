<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context="com.example.maxim.diabetesireland.FoodIntakeFragment"
    tools:showIn="@layout/activity_food_intake">

<Button
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:background="@drawable/customwaterbutton"
        android:id="@+id/waterbutton"
        android:layout_gravity="center_vertical"
    android:layout_below="@+id/fruitvegbutton"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:id="@+id/fruitvegbutton"
        android:layout_gravity="center_vertical"
        android:background="@drawable/customfgbutton"
        android:layout_below="@+id/carbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="190dp"
        android:layout_height="58dp"
        android:background="@drawable/customcarbbutton"
        android:layout_gravity="center_vertical"
        android:id="@+id/carbutton"
        android:layout_below="@+id/dairybutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@drawable/customdairybutton"
        android:layout_gravity="center_vertical"
        android:id="@+id/dairybutton"
        android:layout_below="@+id/alcoholbutton"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="@drawable/custommeatbutton"
        android:layout_gravity="center_vertical"
        android:id="@+id/proteinbutton"
        android:layout_below="@+id/alcoholbutton"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/customalcoholbutton"
        android:layout_gravity="center_vertical"
        android:id="@+id/alcoholbutton"
        android:layout_below="@+id/oilbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/customtreatsbutton"
        android:layout_gravity="center_vertical"
        android:id="@+id/treatsbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:background="@drawable/customoilbutton"
        android:layout_gravity="center_vertical"
        android:id="@+id/oilbutton"
        android:layout_below="@+id/treatsbutton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/textView7"
        android:layout_below="@+id/alcoholbutton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>